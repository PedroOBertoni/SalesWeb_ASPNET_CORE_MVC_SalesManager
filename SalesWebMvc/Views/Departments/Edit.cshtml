@model SalesWebMvc.Models.Department

@{
    ViewData["Title"] = "Editar";
}

<a asp-action="Index" class="btn-back">
    <img src="~/images/voltar.png" alt="Voltar a Tela Anterior" />
</a>

<h2 class="title-white">@ViewData["Title"]</h2>
<hr />
<br />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label">Nome</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn-primary" /> 
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
